<%= form_with(model: subscription, local: false) do |form| %>
 <div class="modal-body">
    <ul class="errors">
    </ul>

  <div class="form-group">
    <%= form.label :subscription_pack_id, "Plan d'abonnement" %>
    <%= form.collection_select(:subscription_pack_id, @subscription_packs, :id, :name, {prompt: "Sélectionner"}, class: "form-control", style: "width: 100%") %> 

  </div>

  <div class="form-group">
    <%= form.label :subscription_type_id, "Type d'abonnement" %>
    <%= form.collection_select(:subscription_type_id, @subscription_types, :id, :name, {prompt: "Sélectionner"}, class: "form-control", style: "width: 100%") %> 

  </div>

  

  </div><!-- modal body -->
  <div class="modal-footer">
    <%= link_to "Annuler", "#", class: "btn btn-secondary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1", data: {dismiss: "modal"} %>
    <%= form.submit  class: "btn btn-primary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
  </div>
<% end %>
