<p id="notice"><%= notice %></p>

<h1>Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Address 1</th>
      <th>Address 2</th>
      <th>Phone 1</th>
      <th>Phone 2</th>
      <th>Country</th>
      <th>City</th>
      <th>Zip code</th>
      <th>Po box</th>
      <th>Street</th>
      <th>Door</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.address_1 %></td>
        <td><%= address.address_2 %></td>
        <td><%= address.phone_1 %></td>
        <td><%= address.phone_2 %></td>
        <td><%= address.country %></td>
        <td><%= address.city %></td>
        <td><%= address.zip_code %></td>
        <td><%= address.po_box %></td>
        <td><%= address.street %></td>
        <td><%= address.door %></td>
        <td><%= address.status %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

